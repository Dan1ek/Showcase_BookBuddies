@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <boekenlijst-toevoegen-form></boekenlijst-toevoegen-form>
    @foreach (var item in Model)
    {
        <book-list list-title="@item.ListTitle" list-description="@item.ListDescription"></book-list>
        foreach (var book in item.Books)
        {
            <book-s book-title="@book.BookTitle" book-author="@book.BookAuthor"></book-s>
        }
    }
</div>

<form asp-controller="Home" asp-action="AddBookList" method="post">
    <p>Voeg een boekenlijst toe!</p>
    <label>Titel van jouw boekenlijst:</label>
    <input name="listTitle" type="text" />
    <label>Beschrijving van jouw boekenlijst:</label>
    <input name="listDescription" type="text" />
    <input type="submit" value="AddBookList" />
</form>

<form asp-controller="Home" asp-action="AddBooks" method="post">
    <p>Voeg een boek toe!</p>
    <label>Titel van jouw boek:</label>
    <input name="bookTitle" type="text" />
    <label>Auteur van jouw boek:</label>
    <input name="bookAuthor" type="text" />
    <input type="submit" value="AddBooks" />
</form>